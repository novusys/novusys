{
  "manifest_version": 3,
  "name": "novusys wallet",
  "short_name": "novusys",
  "version": "0.0.1",
  "description": "Manage your novusys wallet, a wallet that grows with you.",
  "icons": {
    "16": "/icons/favicon-16x16.png",
    "32": "/icons/favicon-32x32.png",
    "48": "/icons/favicon-48x48.png",
    "64": "/icons/favicon-64x64.png",
    "128": "/icons/favicon-128x128.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  }
}
