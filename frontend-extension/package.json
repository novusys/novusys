{
  "name": "novusys-wallet-extension",
  "version": "0.0.1",
  "author": "SSMYTech",
  "description": "A wallet that grow with you.",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "chrome-extension",
    "react",
    "vite"
  ],
  "engines": {
    "node": ">=14.18.0"
  },
  "watch": {
    "build": {
      "patterns": [
        ".",
        "pages/**",
        "public/**",
        "layouts/**",
        "components/**",
        "scripts/**"
      ],
      "ignore": [
        "build/**",
        "node_modules",
        "vite.config.ts.timestamp**"
      ],
      "extensions": [
        "js",
        "json",
        "lock",
        "tsx",
        "ts",
        "scss",
        "css"
      ]
    }
  },
  "scripts": {
    "dev": "npm-watch",
    "build": "tsc && vite build"
  },
  "dependencies": {
    "@types/chrome": "^0.0.224",
    "@types/node": "^18.15.5",
    "buffer": "^6.0.3",
    "ms": "^2.1.3",
    "npm-watch": "^0.11.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.8.0",
    "rollup-plugin-terser": "^7.0.2",
    "sass": "^1.59.3"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^1.0.14",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.5",
    "@vitejs/plugin-react": "^1.3.2",
    "glob": "^9.2.1",
    "prettier": "^2.7.1",
    "typescript": "^4.6.4",
    "vite": "^2.9.13"
  }
}
